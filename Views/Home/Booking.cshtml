<script src="/lib/jquery.plugin.js"></script>
<script src="/lib/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#txtName').on('change', function () {
            loaddepartment();
        });
    });
  
    function loaddepartment() {
        var url = 'Home/GetNames';
        var name = { text: $('#txtName').val() };
        var selectdepartment = $('#select-name');
        $.getjson(url, name, function (data) {
            $(selectdepartment).empty();
            $(selectdepartment).append('<option value=0>Please Select</option>');
            @*for (var i = 0; i < data.length; i++) {
                $(selectdepartment).append('<option value="' + data[i].id + '">' + data[i].name + '</option>');
            }*@
        });
    };
</script>
<br />
<div class="col-sm-6">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-id-card"></i></span>
        <input id="txtName" type="text" class="form-control" />
    </div>
</div>
<div class="col-sm-6">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-id-card"></i></span>
        <select class="form-control" id="select-name">
        </select>
    </div>
</div>

<div>
    <h3>Welcome to Book My Table</h3>
    <br>
    <h5>We are here to delight you with the delicious and yummy foods at any time of the day</h5>
    <h5 align="left">Choose your Restaurant:</h5>
    <br>
    <div>
        <form class="form-control" asp-area="Identity" asp-page="/Account/Book" asp-route-returnUrl="@Url.Action("Booking", "Home", new { area = "" })">

            <p>
                <label for="location">
                    Enter the Current Location:
                    <input type="text" id="location" name="location">
                </label>

                <br>
                <label for="cuisine">
                    Select Cuisine:
                    <input type="text" id="cuisine" name="cuisine">
                </label>

                <br>
                <label for="location">
                    Choose your Restaurant:
                    @Html.DropDownList("Restaurant", "Choose Restaurant")
                </label>
                <br>
                <label for="meal">
                    Choose your Meal:
                    <select name="meal" id="meal">
                        <option value=">Choose your Meal">Choose your Meal</option>
                        <option value="Breakfast">Breakfast</option>
                        <option value="Lunch">Lunch</option>
                        <option value="Dinner">Dinner</option>
                    </select>
                </label>
                <br>
                <input class="btn-primary" type="submit" value="Book" name="Book">
            </p>


        </form>
    </div>
</div>

